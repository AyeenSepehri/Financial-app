{
  "name": "financial-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "server": "json-server --watch db.json --port 4000 ./headers.js",
    "dev:local": "JSON_SERVER_HOST=http://localhost:4000 next dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker build -t financial-app .",
    "docker:run": "docker run -p 3000:3000 financial-app",
    "docker:dev": "docker-compose up --build",
    "docker:dev:down": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:clean": "docker system prune -f",
    "k8s:deploy": "chmod +x k8s/deploy.sh && ./k8s/deploy.sh",
    "k8s:deploy:ingress": "chmod +x k8s/deploy.sh && ./k8s/deploy.sh --with-ingress",
    "k8s:cleanup": "chmod +x k8s/cleanup.sh && ./k8s/cleanup.sh",
    "k8s:cleanup:all": "chmod +x k8s/cleanup.sh && ./k8s/cleanup.sh --remove-image"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@reduxjs/toolkit": "^2.8.2",
    "@tanstack/react-query": "^5.80.6",
    "@tanstack/react-table": "^8.21.3",
    "antd": "^5.26.0",
    "axios": "^1.9.0",
    "dayjs": "^1.11.13",
    "next": "15.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "react-toastify": "^11.0.5",
    "workbox-webpack-plugin": "^7.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "json-server": "^1.0.0-beta.3",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "whatwg-fetch": "^3.6.20"
  }
}
